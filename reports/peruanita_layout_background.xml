<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <template id="peruanita_layout_background">
    <div t-attf-class="header o_company_#{company.id}_layout">
      <t t-set="o" t-value="o if o else (doc if doc else docs[0])" />
      <div class="o_report_header_pe_v1">
        <div class="row align-items-center" style="min-height: 120px;">
          <div class="col-2 d-flex justify-content-center align-items-center" name="company_logo"
            style="height: 100%; margin-right:10px;">
            <img t-if="company.logo" t-att-src="image_data_uri(company.logo)" alt="Logo"
              class="w-100" style="max-height: 100px; object-fit: contain;" />
          </div>
          <div class="col-10 d-flex flex-column justify-content-center" name="company_address">
            <div>
              <span style="font-size:20px; font-weight:900;">
                <t t-esc="company.name" />
              </span>
            </div>
            <div>
              <span t-field="company.street" style="font-size:15px;" />
            </div>
            <div t-if="company.email">
              <b style="font-size:15px;"> Email: </b>
              <span t-field="company.email" style="font-size:15px;" />
            </div>
            <div t-if="company.phone">
              <b style="font-size:15px;"> Teléfono: </b>
              <span t-field="company.phone" style="font-size:15px;" />
            </div>
          </div>
        </div>
      </div>
    </div>
    <div t-attf-class="o_company_#{company.id}_layout article o_report_layout_pe_v1"
      t-att-data-oe-model="o and o._name" t-att-data-oe-id="o and o.id"
      t-att-data-oe-lang="o and o.env.context.get('lang')">
      <t t-raw="0" />
    </div>
    <div class="footer o_company_#{company.id}_layout">
      <div class="o_report_footer_pe_v1">
        <div class="row align-items-center">
          <div class="col-12 d-flex flex-column justify-content-center" name="company_info">
            <div t-if="company.phone" class="text-center">
              <b style="font-size:15px;"> Puedes visitar nuestra página web: </b>
              <span t-field="company.website" style="font-size:15px;" />
            </div>
          </div>
        </div>
      </div>
    </div>
  </template>
  <record id="base.main_company" model="res.company">
    <field name="external_report_layout_id" ref="peruanita_bg_layout.peruanita_layout_background" />
  </record>
</odoo>